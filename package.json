  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayobuenavista/benchmark-protocol.git"
  },
  "scripts": {
    "deploy:aave": "yarn hardhat run scripts/deploy_aave.js",
    "compile": "yarn hardhat compile && yarn size",
    "console:dev": "yarn hardhat console",
    "coverage": "yarn hardhat coverage --testfiles",
    "coverage:all": "yarn hardhat coverage --testfiles \"test/**/*.spec.ts\"",
    "fork": "yarn hardhat node",
    "lint": "yarn solhint 'contracts/**/*.sol' && yarn prettier -c './**/*.js'",
    "size": "yarn ts-node scripts/contractBytecodeSize.js",
    "test": "yarn hardhat test --network hardhat",
    "test:all": "yarn test test/**/*.spec.ts",
    "ci": "yarn hardhat compile && yarn coverage:all",
    "format": "yarn prettier --write contracts/**/*.sol && yarn prettier --write test/**/*.ts"
  }
}
